
# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.oh-my-zsh

source $HOME/.config/base16-shell/scripts/base16-materia.sh

ZSH_THEME="powerlevel9k/powerlevel9k"

plugins=(git composer symfony2 docker aws npm node)

source $ZSH/oh-my-zsh.sh

alias composer='docker run -it --rm -v $HOME:$HOME -v /etc/passwd:/etc/passwd -e COMPOSER_HOME="$HOME/.composer" -u $UID --net=host -w `pwd` composer/composer'
alias elixir='docker run -it --rm -v $HOME:$HOME -e HOME=$HOME -w `pwd` -u $UID elixir:1.3 elixir'
alias mix='docker run -it --rm -v $HOME:$HOME -e HOME=$HOME -w `pwd` -u $UID elixir:1.3 mix'
alias iex='docker run -it --rm -v $HOME:$HOME -e HOME=$HOME -w `pwd` -u $UID elixir:1.3 iex'
alias php='docker run -it --rm -v $HOME:$HOME -e HOME=$HOME -w `pwd` -u $UID php:7'
alias symfony_installer='docker run -it --rm  -u $(id -u):$(id -g) -v $(pwd):/app ypereirareis/symfony-installer new'
